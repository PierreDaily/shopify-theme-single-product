$gutter-global: 4rem;
$primary-font: Rubik;
$cart-button: #d8d8d8;
$cart-content: #9a9a9a;
$black: #000000;
$black--light: #555555;
$grey: #707070;
$grey--light: #979797;
$orange: #ff3700;
$white: #ffffff;

$black-border: 1px solid $black;

html {
  /* set base font-size to equiv "10px", which is adapted to rem unit */
  font-size: 62.5%;
  /* IE9-IE11 math fixing. See http://bit.ly/1g4X0bX */
  font-size: calc(1em * 0.625);
  height: 100%;
}

@media only screen and (min-width: 1921px) {
  html {
    font-size: 150%;
  }
}

@media only screen and (max-width: 768px) {
}

.button-add-to-cart {
  align-items: center;
  border: none;
  color: $white;
  font-size: 1.5rem;
  line-height: 1.8rem;
  letter-spacing: 0;
  text-align: left;
  background-color: $orange;
  height: 6rem;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 2rem 0 2rem;
}

.button-add-to-cart__price {
  text-align: right;
}

.container {
  display: flex;
  flex-direction: row;
  padding: $gutter-global $gutter-global $gutter-global 0;
  font-family: Rubik;
  height: 100vh;
  box-sizing: border-box;
  position: relative;
}

.detail {
  display: flex;
  flex-direction: row;
  margin-left: $gutter-global;
  min-height: 40rem;
}

.detail__left {
  width: 50%;
  margin-right: $gutter-global;
  margin-bottom: 6rem;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.detail__right {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  width: 50%;
}

.description {
  margin-bottom: $gutter-global;
}

.description__content {
  color: $black--light;
  font-size: 1.5rem;
  font-style: normal;
  font-weight: 400;
  line-height: 2rem;
  letter-spacing: 0px;
  text-align: left;
}

.description__headline {
  color: $black;
  font-size: 1.5rem;
  font-style: normal;
  font-weight: 400;
  line-height: 2rem;
  letter-spacing: 0px;
  text-align: left;
  margin-top: 0;
}

.form__label--color {
  color: $grey;
  display: block;
  font-size: 1.2rem;
  margin-bottom: 0.5rem;
}

.info-list {
  padding: 0;
  margin: 0;
}

.info-list__elem {
  color: $black--light;
  font-style: normal;
  font-weight: 300;
  font-size: 1.5rem;
  line-height: 1.8rem;
  list-style-type: none;
  /* or 120% */

  text-align: left;
  border-bottom: 1px solid $grey--light;
  padding-bottom: 2rem;
  padding-top: 2rem;

  &:first-child {
    border-top: 1px solid $grey--light;
  }
}

.main-title {
  font-size: 39rem;
  font-style: normal;
  font-weight: 300;
  line-height: 32rem;
  letter-spacing: -1.7rem;
  text-align: center;
  margin: 0 0 6rem 0;
}

.product-display {
  width: 50%;
  object-fit: cover;
}

.right-column {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  width: 50%;
  overflow-x: hidden;
}

.subitle {
  font-family: $primary-font;
  font-style: normal;
  font-weight: normal;
  font-size: 3rem;
  line-height: $gutter-global;
  max-width: 23rem;
  margin-bottom: 5rem;
  color: #232323;
}

.my-cart {
  align-items: center;
  display: flex;
  justify-content: flex-end;
  height: 2rem;
  position: absolute;
  right: 4rem;
  text-decoration: none;
  top: 4rem;

  &:hover {
    .my-cart__content {
      visibility: visible;
    }
  }
}

.my-cart__logo {
  background-color: $cart-button;
  border-radius: 50%;
  display: block;
  height: 1rem;
  width: 1rem;
}

.my-cart__logo--active {
  background-color: $orange;
  color: $white;
  border-radius: 50%;
  display: block;
  line-height: 2rem;
  height: 2rem;
  text-align: center;
  width: 2em;
}

.my-cart__content {
  color: $cart-content;
  font-family: HelveticaNeue;
  font-style: Regular;
  font-size: 1.5rem;
  line-height: 2rem;
  letter-spacing: 0;
  margin-right: 2rem;
  text-align: left;
  visibility: hidden;
}

.select-group {
  position: relative;
  div {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 0;
    right: 0;
    width: 6rem;
    height: 6rem;
    border-left: $black-border;
    pointer-events: none;
    img {
      display: inline-block;
      vertical-align: center;
      text-align: center;
    }
  }

  select {
    border: $black-border;
    appearance: none;
    height: 6rem;
    width: 100%;
    font-size: 1.5rem;
    line-height: 1.8rem;
    letter-spacing: 0px;
    padding-left: 2rem;
    text-align: left;
  }
}
